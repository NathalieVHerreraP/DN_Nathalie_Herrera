@model GymManager.Web.Models.MembershipTypesViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <h3 class="mt-5">Membership Type Addition</h3>

    <form asp-action="Create">

        <div class="mb-3">
            <label asp-for="Type" class="form-label">Type</label>
            <input type="text" class="form-control" asp-for="Type" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Cost" class="form-label">Cost</label>
            <input type="number" step="0.01" class="form-control" asp-for="Cost" />
            <span asp-validation-for="Cost" class="text-danger"></span>

        </div>


        <div class="mb-3">
            <label asp-for="MonthsDuration" class="form-label">Duration in Months</label>
            <input type="number" class="form-control" asp-for="MonthsDuration" />
            <span asp-validation-for="MonthsDuration" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-primary mb-3">Submit</button>

    </form>
</div>

